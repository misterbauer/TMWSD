<% provide :title,"Create a New Message" %>

<h1>Create a New Message</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@message) do |f| %>
		<%= render 'shared/error_messages' %>
		<%= f.label :message %>
		<%= f.text_area :message, class:"form_control", rows:10 %>
		
		<%= f.label :password %>
		<%= f.password_field :password, class:"form_control", cols:10 %>

		<%= f.submit "Save my Message", class:"btn btn-primary" %>
	<% end %>

</div>
</div>
